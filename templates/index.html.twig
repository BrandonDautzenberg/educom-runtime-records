{% extends 'base.html.twig' %}

{% block title %}
Runtime Records
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12">
			<div class="backdrop-box">
			<div class="centered-div">
			</div><br>
			</div>
		</div>
		<div class="row" style="display: flex; justify-content: center;">
			{% for product in products[0:4] %}
				<div class="col-md-4">
					<span class="text-span">{{product.price}}</span>
					<a href="{{path('detail', {'slug': product.title })}}"><img class="album" src="{{ product.cover}}"></a>
					<p class="album-title clear">{{ product.title }}</p>
					<p class="artist">{{ product.artist }}</p>
				</div>
			{% endfor %}
		</div>
		<div class="row" style="display: flex; justify-content: center;">
			{% for product in products[4:4] %}
				<div class="col-md-4">
					<span class="text-span">{{product.price}}</span>
					<img class="album" src="{{ product.cover }}">	
					<p class="album-title clear">{{ product.title }}</p>
					<p class="artist">{{ product.artist }}</p>
				</div>
			{% endfor %}
		</div>
		<div class="col-md-3"></div>
		<div class="col-md-3"></div>
		<div class="col-md-3"></div>
		<div class="col-md-3"></div>
	</div>
	<div class="row">
		<div class="col-md-3"></div>
		<div class="col-md-3"></div>
		<div class="col-md-3"></div>
		<div class="col-md-3"></div>
	</div>
</div></div>
{% endblock %}
